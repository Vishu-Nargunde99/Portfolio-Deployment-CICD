pipeline {
    agent any

    environment {
        SSH_CRED = 'ssh-key-credential' // jenkins credicial ID
        SERVER_IP = '54.80.153.1'// Your Deploy EC2 IP
        REMOTE_USER = 'ubuntu'
        WEB_DIR = '/var/www/html/'
    }

    stages {
        stage('Clone Repo') {
            steps {
                git url: 'https://github.com/Vishu-Nargunde99/Portfolio-Deployment-CICD', branch: 'master'
            }
        }
        stage('Check Workspace') {
            steps {
                sh '''
                        echo "Files in Jenkins workspace:"
                        ls -R
                    '''
            }
        }

        stage('Clean Workspace') {
            steps {
                    deleteDir()
            }
        }


        stage('Deploy to Apache Server') {
            steps {
                sshagent(credentials: ["${SSH_CRED}"]) {
                    sh '''
                        echo "Cleaning old files on server..."
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} "sudo rm -rf ${WEB_DIR}/*"

                        echo "Uploading new files to /tmp on server..."
                        scp -r index.html css js assets ${REMOTE_USER}@${SERVER_IP}:/tmp/

                        echo "Deploying files to Apache directory..."
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} "sudo cp -r /tmp/index.html /tmp/css /tmp/js /tmp/assets  ${WEB_DIR}/"
                    '''
                }
            }
        }
    }
}
